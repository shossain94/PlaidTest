pipeline {
    agent any
   tools {nodejs 'node'}
    stages {
        stage('Code and Dependencies'){
            parallel{
            stage('Checkout Code'){
                steps{
                    git 'https://github.com/shossain94/PlaidTest.git'
                }
            }
            stage('Install Dependencies'){
                steps{
                    powershell 'npm install'
                    powershell 'npm install wdio-allure-reporter --save-dev'
                    powershell 'npm install -g allure-commandline --save-dev'
                    powershell 'docker pull elgalu/selenium'
                    powershell 'docker pull dosel/zalenium'
                }
          	  }
            }
        }
            stage ('Start Zalenium'){
                steps{
                	script {
                		try {
                    powershell 'docker run --rm -ti --name zalenium -p 4444:4444 -e PULL_SELENIUM_IMAGE=true -v /var/run/docker.sock:/var/run/docker.sock -v /tmp/videos:/home/seluser/videos -e WAIT_FOR_AVAILABLE_NODES=false --privileged dosel/zalenium start'
                }
                catch (err) {
                echo err.getMessage()
                	}
              	 }
               } 
            }
            stage ('Run Tests'){
                steps{
                    powershell 'mvn clean verify'
                }
            }
            stage ('Generate Allure Reports'){
                steps{
                script {
                		try {
                    allure([
                        includeProperties: false,
                        jdk: '',
                        properties: [],
                        reportBuildPolicy: 'ALWAYS',
                        results: [[path: 'allure-results']]
                    ])
                    }
                    catch (err) {
                echo err.getMessage()
                		}
              	 	}
                }
            }
            stage ('Stop Zalenium'){
                steps{
                    powershell 'docker stop zalenium'
                }
            }
    }
}